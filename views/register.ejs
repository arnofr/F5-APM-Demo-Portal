

<div layout="row" layout-align="center center" >

    <md-card>
      <md-toolbar class="md-table-toolbar md-default" >
        <div class="md-toolbar-tools" layout-align="center center">
          <span>Register new User</span>
        </div>
      </md-toolbar>
      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>
      <form name="logInform" >

        <div layout-gt-xs="column " layout-align="center center">
          <md-input-container class="md-block" flex-gt-xs>
              <label>Username:</label>
              <input ng-model="user.username" name="username"/>
          </md-input-container>
          <md-input-container class="md-block" flex-gt-xs>
              <label>Password:</label>
              <input ng-model="user.password" name="password"/>
          </md-input-container>
          <md-input-container>
            <label>User Group:</label>
            <md-select ng-model="user.group" multiple>
              <md-option ng-repeat="group in groups" ng-value="group.name">{{group.name}}</md-option>
            </md-select>
          </md-input-container>
          <md-checkbox ng-model="user.isadmin" name="isadmin" aria-label="Admin rigths">
            Is Admin?
          </md-checkbox>
          <div flex="nogrow" layout-align="center center">
            <md-button type="submit" class="md-primary" ng-class="{'md-raised md-hue-1': (newUrlform.$dirty && newUrlform.$valid) }" ng-click="register(logInform)">Register
            </md-button>
          </div>
        </div>
      </form>
    </md-card>

</div>
